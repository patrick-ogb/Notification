@page "//createnotificationtype/{Id}"
@inherits NotificationTypeCrtBase

<div class="col-sm-12">
    <EditForm Model="NotificationTypeCrt" OnValidSubmit="CrtOrUptNotificationType">
        <DataAnnotationsValidator />
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Name
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="NotificationTypeCrt.Name" Style="width:100%;  height:45px" />
                    NotificationChannelCrtVM.Description
                    <ValidationMessage For="@(() => NotificationTypeCrt.Name)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.3rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Description
                </div>
                <div class="col-sm-10">
                    <MatTextField TextArea="true" Label="Description" 
                                  @bind-Value="NotificationTypeCrt.Description" 
                                  Style="width: 100%;height: 100px"/>
                    <ValidationMessage For="@(() => NotificationTypeCrt.Description)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.0rem 0.8rem 0.0rem">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <MatButton Type="submit" Raised="true">Submit</MatButton>
                    <RadzenButton style="margin: 0 1rem 1rem 0" Click=@(args => Cancel()) Text="Cancel" ButtonStyle="ButtonStyle.Danger" />
                </div>
            </div>
        </RadzenCard>
    </EditForm>
</div>
