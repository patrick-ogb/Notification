@page "/createsmsalert/{Id}"
@inherits SMSAlertCrtBase

<div class="col-sm-12">

    <EditForm Model="SMSAlertCrtVM" OnValidSubmit="CrtOrUptEmailAlert">
        <DataAnnotationsValidator />
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Mobile No.
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Mobile No." @bind-Value="SMSAlertCrtVM.MobileNo" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => SMSAlertCrtVM.MobileNo)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Subject
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Subject" @bind-Value="SMSAlertCrtVM.Subject" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => SMSAlertCrtVM.Subject)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.3rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Message
                </div>
                <div class="col-sm-10">
                    <MatTextField TextArea="true" Label="Message"
                                  @bind-Value="SMSAlertCrtVM.Message" 
                                  Style="width: 100%; height: 100px"/>
                    <ValidationMessage For="@(() => SMSAlertCrtVM.Message)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Receiver's Name
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Receiver's name" @bind-Value="SMSAlertCrtVM.ReceiverName" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => SMSAlertCrtVM.ReceiverName)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.0rem 0.8rem 0.0rem">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <MatButton Type="submit" Raised="true">Submit</MatButton>
                    <RadzenButton style="margin: 0 1rem 1rem 0" Click=@(args => Cancel()) Text="Cancel" ButtonStyle="ButtonStyle.Danger" />
                </div>
            </div>
        </RadzenCard>
    </EditForm>

</div>