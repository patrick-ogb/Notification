@page "/activitylogedit/{activitylog}"
@inherits ActivityLogEditBase

<div class="col-sm-12">
    <EditForm Model="ActivityLogVM" OnValidSubmit="EditActivityLog">
        <DataAnnotationsValidator />
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Application name
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="ActivityLogVM.ApplicationName" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => ActivityLogVM.ApplicationName)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Activity type
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="ActivityLogVM.ActivityTyp_Request_Response" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => ActivityLogVM.ActivityTyp_Request_Response)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    User name
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="ActivityLogVM.UserName" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => ActivityLogVM.UserName)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    IPAddress
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="ActivityLogVM.IPAddress" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => ActivityLogVM.IPAddress)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Data
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="ActivityLogVM.Data" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => ActivityLogVM.Data)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Url
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Full name" @bind-Value="ActivityLogVM.Url" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => ActivityLogVM.Url)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.0rem 0.8rem 0.0rem">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <MatButton Type="submit" Raised="true">Submit</MatButton>
                    <RadzenButton style="margin: 0 1rem 1rem 0" Click=@(args => Cancel()) Text="Cancel" ButtonStyle="ButtonStyle.Danger" />
                </div>
            </div>
        </RadzenCard>
    </EditForm>
</div>