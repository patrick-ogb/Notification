@page "/createemailalert/{Id}"
@inherits EmailAlertCrtBase

<div class="col-sm-12">

    <EditForm Model="EmailAlertCrtVM" OnValidSubmit="CrtOrUptEmailAlert">
        <DataAnnotationsValidator />
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Email
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Email" @bind-Value="EmailAlertCrtVM.Email" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => EmailAlertCrtVM.Email)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Subject
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Subject" @bind-Value="EmailAlertCrtVM.Subject" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => EmailAlertCrtVM.Subject)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.3rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Message
                </div>
                <div class="col-sm-10">
                    <MatTextField @bind-Value="EmailAlertCrtVM.Message" 
                                  Label="description" TextArea="true" FullWidth="true"/>
                    <ValidationMessage For="@(() => EmailAlertCrtVM.Message)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Receiver's Name
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="Receiver's name" @bind-Value="EmailAlertCrtVM.ReceiverName" Style="width:100%;  height:45px" />
                    <ValidationMessage For="@(() => EmailAlertCrtVM.ReceiverName)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.0rem 0.8rem 0.0rem">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <MatButton Type="submit" Raised="true">Submit</MatButton>
                    <RadzenButton style="margin: 0 1rem 1rem 0" Click=@(args => Cancel()) Text="Cancel" ButtonStyle="ButtonStyle.Danger" />
                </div>
            </div>
        </RadzenCard>
    </EditForm>

</div>