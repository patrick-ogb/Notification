@page "/createnotificationtemplate/{Id}"
@inherits NotificationTemplateCrtBase

<div class="col-sm-12">

    <EditForm Model="notificationTemplateCrtVM" OnValidSubmit="CrtOrUptNotificationTemplate">
        <DataAnnotationsValidator />
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.2rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Name
                </div>
                <div class="col-sm-10">
                    <MatTextField Label="full name" @bind-Value="notificationTemplateCrtVM.Name" Style="width:100%; height:45px" />
                    <ValidationMessage For="@(() => notificationTemplateCrtVM.Name)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.3rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Description
                </div>
                <div class="col-sm-10">
                    <MatTextField @bind-Value="@notificationTemplateCrtVM.Description" Label="description" TextArea="true" FullWidth="true"></MatTextField>
                    <ValidationMessage For="@(() => notificationTemplateCrtVM.Description)" />
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.3rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Notification Type
                </div>
                <div class="col-sm-10">
                    <MatSelect @bind-Value="NotificationTypeId"  Label="@DefaultSelectedNotificationType" Style="width:100%; height:45px">
                        @foreach (var notificationtype in notificationTypeVMs)
                        {
                            <MatOption TValue="int" Value="notificationtype.Id">@notificationtype.Name</MatOption>
                            <ValidationMessage For="@(() => notificationtype.Id)" />
                        }
                    </MatSelect>
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.3rem 0.3rem 0.0rem">
            <div class="row">
                <div class="col-sm-2 text-right">
                    Notification Template
                </div>
                <div class="col-sm-10">
                    <MatSelect @bind-Value="NotificationChannelpeId"  Label="@DefaultSelectedNotificationChannel" Style="width:100%; height:45px">
                        @foreach (var notificationchannelpe in notificationChannelVMs)
                        {
                            <MatOption TValue="int" Value="notificationchannelpe.Id">@notificationchannelpe.Name</MatOption>
                            <ValidationMessage For="@(() => notificationchannelpe.Name)" />
                        }
                    </MatSelect>
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding: 0.0rem 0.0rem 0.8rem 0.0rem">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <MatButton Type="submit" Raised="true">Submit</MatButton>
                    <RadzenButton style="margin: 0 1rem 1rem 0" Click=@(args => Cancel()) Text="Cancel" ButtonStyle="ButtonStyle.Danger" />
                </div>
            </div>
        </RadzenCard>
    </EditForm>

</div>

